<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/conx_primary</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="FeedDrawerTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:background">@color/conx_teal</item>
    </style>

    <style name="ToolBarStyleCompat" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:background">@color/conx_teal</item>
    </style>

    <style name="StreamDescriptionTextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/stream_as_title</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <!--<item name="android:textColorError">#a2b2b5</item>-->
        <item name="colorControlHighlight">#a2b2b5</item>
        <item name="backgroundTint">#a2b2b5</item>
    </style>


    <style name="Group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/group_background</item>
    </style>

    <style name="GroupEditText" parent="Group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/group_edittext_background</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="GroupItemTitle" parent="Group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/group_textfield_titles</item>
    </style>

    <style name="GroupSelectedItem" parent="Group">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/group_button_pressed</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GroupUnselectedItem" parent="Group">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/group_button_unpressed</item>
        <item name="android:textColor">@color/conx_teal</item>
    </style>

    <style name="DiscoverPagerTitleStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/conx_primary</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE status -->
        <item name="android:textColorHint">@color/conx_primary</item>
        <item name="android:textSize">@dimen/font_large</item>
        <!-- Label color in TRUE status and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/conx_primary</item>
        <item name="colorControlNormal">@color/conx_primary</item>
        <item name="colorControlActivated">@color/conx_primary</item>
    </style>

    <!-- AN-173 ExoPlayer Button style -->
    <style name="LivestreamButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="Cx2sLivestreamCameraFlipWhiteButtonToggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:background">@drawable/ic_flip_white_24dp</item>
        <item name="android:textOn">@string/empty_string</item>
        <item name="android:textOff">@string/empty_string</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="Cx2sLivestreamFlashWhiteButtonToggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:textOn">@string/empty_string</item>
        <item name="android:textOff">@string/empty_string</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <!--<item name="android:background">@drawable/ic_flash_toggle_white_24dp</item>-->

    <style name="Cx2sLivestreamMicWhiteButtonToggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:textOn">@string/empty_string</item>
        <item name="android:textOff">@string/empty_string</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <!--<item name="android:background">@drawable/ic_mic_toggle_white_24dp</item>-->

    <style name="Cx2sLivestreamRecordVideoWhiteButtonToggle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:textOn">@string/empty_string</item>
        <item name="android:textOff">@string/empty_string</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <!--<item name="android:background">@drawable/ic_record_video_toggle_white_24dp</item>-->

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/conx_secondary</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/conx_secondary</item>
    </style>

    <style name="ConxPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/conx_primary</item>
        <item name="colorPrimaryDark">@color/conx_teal</item>
        <item name="colorAccent">@color/conx_primary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="EmailDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible|adjustPan</item>
        <item name="android:gravity">bottom</item>
    </style>

</resources>