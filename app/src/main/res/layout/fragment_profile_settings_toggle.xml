<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="@string/notifications"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_notifications_toggle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/messages"
                android:textColor="@color/profile_unfollow_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/helper_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_mark"
                android:textAllCaps="true"
                android:textColor="@color/messaging_index_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/toggle_message_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_notifications_toggle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/tags"
                android:textColor="@color/profile_unfollow_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/helper_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_mark"
                android:textAllCaps="true"
                android:textColor="@color/messaging_index_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/toggle_tag_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_notifications_toggle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/posts"
                android:textColor="@color/profile_unfollow_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/helper_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_mark"
                android:textAllCaps="true"
                android:textColor="@color/messaging_index_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/toggle_post_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_notifications_toggle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/invites"
                android:textColor="@color/profile_unfollow_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/helper_invites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_mark"
                android:textAllCaps="true"
                android:textColor="@color/messaging_index_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/toggle_invite_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_notifications_toggle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/following"
                android:textColor="@color/profile_unfollow_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/helper_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_mark"
                android:textAllCaps="true"
                android:textColor="@color/messaging_index_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/toggle_following_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_notifications_toggle"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="@string/follower_profile"
                android:textColor="@color/profile_unfollow_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/helper_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="7dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:text="@string/question_mark"
                android:textAllCaps="true"
                android:textColor="@color/messaging_index_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <Switch
            android:id="@+id/toggle_followers_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>

</LinearLayout>