<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.conx2share.conx2share.ui.settings.SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/contact_support.toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ToolBarStyleCompat">

        <TextView
            style="@style/toolbar_title"
            android:text="Contact Support"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/font_xlarge"
                android:textColor="@android:color/black"
                android:text="Need help?"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:textSize="@dimen/font_large"
                android:textColor="@color/gray"
                android:text="Please let us know what we can do to help. Fill in the form below and we will get back to you as soon as possible."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:textSize="@dimen/font_large"
                android:textColor="@color/conx_teal"
                android:textStyle="bold"
                android:text="- Your Friendly Conx2share Support Team"/>

            <com.conx2share.conx2share.reusableviews.InputFormView
                android:id="@+id/contact_support.name_input"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Your name"/>
            
            <com.conx2share.conx2share.reusableviews.InputFormView
                android:id="@+id/contact_support.email_input"
                android:layout_marginTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Your email"/>


            <com.conx2share.conx2share.reusableviews.InputFormView
                android:id="@+id/contact_support.message_input"
                android:layout_marginTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hint="Your message"
                app:single_line="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
