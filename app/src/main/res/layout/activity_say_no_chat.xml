<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_say_no_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_screen_bg"
    android:orientation="vertical"
    tools:context="com.conx2share.conx2share.ui.sayno.SayNoChatActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/say_no_chat_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conx_primary">

        <ImageView
            android:id="@+id/say_no_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sayno_logo_md" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/say_no_chat_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/padding_quarter">

        <ImageButton
            android:id="@+id/say_no_chat_attachments_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="15dp"
            android:src="@drawable/ic_camera" />

        <EditText
            android:id="@+id/say_no_chat_input_edit_text"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/padding_quarter"
            android:layout_marginRight="@dimen/padding_quarter"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="3dp" />

        <ImageButton
            android:id="@+id/say_no_chat_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/ic_send"
            android:text="@string/chat_send_btn" />

    </LinearLayout>

</LinearLayout>
