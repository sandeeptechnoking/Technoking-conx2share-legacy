<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="@dimen/sign_in_elevation"
    app:contentPadding="12dp">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.conx2share.conx2share.ui.view.AvatarImageView
            android:id="@+id/say_no_school_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@drawable/ic_school_placeholder" />

        <TextView
            android:id="@+id/say_no_school_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Test school" />

    </LinearLayout>
</android.support.v7.widget.CardView>