<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/discover_search_ac_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/search_to_discover"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/discover_view_pager_title_strip"
            style="@style/DiscoverPagerTitleStrip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingTop="10dp"
            app:tabIndicatorHeight="1px"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/conx_teal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/conx_teal" />

        <android.support.v4.view.ViewPager
            android:id="@+id/discover_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>