<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/media_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="400dp" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:src="@drawable/video_orange"
            android:visibility="gone" />

    </RelativeLayout>

    <com.conx2share.conx2share.ui.view.AvenirNextTextView
        android:id="@+id/post_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:autoLink="web"/>

    <LinearLayout
        android:id="@+id/post_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp">

            <com.conx2share.conx2share.ui.view.AvenirNextTextView
                android:id="@+id/post_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/post_comment_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/post_comment_count"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/new_comment_selector" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp">

            <com.conx2share.conx2share.ui.view.AvenirNextTextView
                android:id="@+id/post_like_count"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center|right"
                android:paddingLeft="10dp"
                android:paddingRight="2dp"
                android:text="2"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/post_like_button"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/post_like_count"
                android:background="@color/transparent"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/like_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_menu_share" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/flag_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@color/transparent"
                android:paddingBottom="10dp"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_flag_grey" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>