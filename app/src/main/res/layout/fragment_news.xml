<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/news_source_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/black_to_transparent_gradient"
            android:scaleType="fitXY"/>

        <EditText
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:id="@+id/news_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_the_news"
            android:layout_margin="5dp"
            android:padding="10dp"/>

    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/news_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/news_progress_bar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

    </RelativeLayout>

</LinearLayout>